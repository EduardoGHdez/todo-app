<!DOCTYPE html>
<html>
  <head>
    <title>TodoApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
  <nav class="navbar" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a class="navbar-item" style="font-size:40px" >
      <span class="fa fa-gamepad">
      </span><hr>To-Do
    </a>

    <div class="navbar-burger" data-target="navMenu">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>
<div class="navbar-menu" id="navMenu">
  <div class="navbar-start">
    <a class="navbar-item">
    </a>
  </div>

  <div class="navbar-end">
      <div class="buttons">
        <% if user_signed_in? %>            
          <%= link_to "Sign out", destroy_user_session_path,
              method: :delete, class: "navbar-item button is-link" %>
          <%= link_to('', edit_user_registration_path, 
              class: "navbar-item button fa fa-pencil is-text") %>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path,
              class: "navbar-item button is-primary" %>
          <%= link_to "Log in", new_user_session_path,
              class: "navbar-item button is-light" %>    
        <% end %> 
      </div> 
  </div>
</div>
</nav>

  <%= yield %>
</body>
</html>
