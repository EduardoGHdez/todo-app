<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TodoApp</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body class="is-mobile">
  <!-- START NAV -->
    <nav class="navbar">
        <div class="container">
            <div class="navbar-brand">
                <a class="navbar-item title " style="font-size:40px" href="/">
                  To-do&nbsp <span class="fa fa-gamepad"></span>
                </a>
                <span class="navbar-burger burger" data-target="navbarMenu">
                        <span></span>
                <span></span>
                <span></span>
                </span>
            </div>
            <div id="navbarMenu" class="navbar-menu">
                <div class="navbar-end">                                        
                    <div class="buttons">
        <% if user_signed_in? %>      
          <div class="navbar-item has-dropdown is-hoverable">
            <a class="navbar-link"> <%= current_user.name%> </a>
            <div class="navbar-dropdown">
              <a href="/users/edit" class="navbar-item">
                <i class="fa fa-edit"></i> Edit profile
              </a>                             
              <a data-method="delete" href="/users/sign_out" rel="nofollow" class="navbar-item"> 
                <i class="fa fa-sign-out"></i> Sign out
              </a>                             
            </div>
          </div>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path,
              class: "navbar-item button is-primary" %>
          <%= link_to "Log in", new_user_session_path,
              class: "navbar-item button is-light" %>    
        <% end %> 
      </div> 
                </div>
            </div>
        </div>
  </nav>
  <%= yield %>
</body>
</html>
