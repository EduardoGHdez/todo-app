
%p#notice= notice
%h1
  Lists  #{@user.name}
.content.is-centerd{}
  %table.table
    %thead
      - @lists.each do |list|
        %tr
          %td= list.title
          %td
          %td
          %td
          %td
          %td
    %tbody
      - @lists.each do |list|
        %tr
          %td= list.title
          %td= list.description
          %td= list.user.email
          %td= link_to 'Show', list
          %td= link_to 'Edit', edit_list_path(list)
          %td= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New List', new_list_path
